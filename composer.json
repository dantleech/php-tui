{
    "name": "dantleech/php-tui",
    "description": "PHP TUI",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DTL\\PhpTui\\": "src/",
            "DTL\\Cassowary\\": "lib/cassowary/src",
            "DTL\\PhpTerm\\": "lib/php-term/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DTL\\PhpTui\\Tests\\": "tests/",
            "DTL\\Cassowary\\Tests\\": "lib/cassowary/tests/",
            "DTL\\PhpTerm\\Tests\\": "lib/php-term/tests/"
        }
    },
    "authors": [
        {
            "name": "Daniel Leech"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.34",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.4",
        "symfony/var-dumper": "^6.3"
    },
    "scripts": {
        "phpstan": "./vendor/bin/phpstan --memory-limit=1G",
        "php-cs-fixer": "./vendor/bin/php-cs-fixer fix",
        "phpunit": "./vendor/bin/phpunit",
        "integrate": [
            "@php-cs-fixer",
            "@phpstan",
            "@phpunit"
        ]
    }
}
